import { storiesOf } from '@storybook/react-native';
import React from 'react';
import { View } from 'react-native';
import { Colors, Text } from 'react-native-vulpes';

const colorList = () => {
  var keys = [];
  for (var k in Colors) keys.push(k);
  return keys;
};

export default {
  title: 'Example/Colors',
  component: Text,
};

const TemplateTextColor = ({ color = 'red', ...rest }) => (
  <Text {...rest} color={color}>
    {color}
  </Text>
);

export const TextColor = TemplateTextColor.bind({});
TextColor.argTypes = {
  color: {
    description: 'color for the text',
    control: {
      type: 'select',
      options: colorList(),
    },
  },
};
TextColor.args = {
  color: 'blue',
};

storiesOf('Button', module)
  .addDecorator((Story) => (
    <View>
      <Story />
    </View>
  ))
  .add('Text Color', TemplateTextColor, TextColor.args);
